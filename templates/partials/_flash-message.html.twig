{% for message in app.flashes('success') %}
    <div class="alert alert-dismissible alert-success fade show alert-container" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('warning') %}
    <div class="alert alert-dismissible alert-warning fade show alert-container" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('notice') %}
    <div class="alert alert-dismissible alert-success fade show alert-container" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="alert alert-dismissible alert-danger fade show alert-container" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% endfor %}
<script>
$(".alert").fadeTo(5000, 1).fadeTo(500, 0);
</script>