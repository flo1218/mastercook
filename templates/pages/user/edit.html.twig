{% extends 'base.html.twig' %}

{% block title %}{{ app.request.server.get('APP_NAME') }} - {{ 'header.update-informations.label'|trans}}{% endblock %}

{% block body %}
<div class="container-lg">
    <h1>{{ 'header.update-informations.label'|trans}}</h1>

    {% if app.user.imageName %}
        <img src="/images/user/{{ app.user.imageName }}" class="img-fluid img-thumbnail" alt="Avatar"/>
    {% endif %}
    {{ form(form) }}
</div>
{% endblock %}
